{
    "compilerOptions": {
        "target": "es6",
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "declaration": true,
        "strict": true,
        // "esModuleInterop": true,
        "lib": ["esnext"],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
